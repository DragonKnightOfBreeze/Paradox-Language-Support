{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Paradox CSV",
  "scopeName": "source.paradox.csv",
  "fileTypes": ["csv"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#booleans" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.paradox.csv",
          "begin": "#",
          "end": "$"
        }
      ]
    },
    "booleans": {
      "patterns": [
        { "name": "constant.language.boolean.paradox.csv", "match": "\\b(?:yes|no)\\b" }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.paradox.csv", "match": "\\b-?\\d+\\.\\d+\\b" },
        { "name": "constant.numeric.integer.paradox.csv", "match": "\\b-?\\d+\\b" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.paradox.csv",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#escapes" }
          ]
        },
        {
          "name": "string.unquoted.paradox.csv",
          "begin": "(?=[^#;\\s])",
          "end": "$|(?=[#;\\s])",
          "patterns": [
            { "include": "#escapes" }
          ]
        }
      ]
    },
    "escapes": {
      "patterns": [
        { "name": "constant.character.escape.paradox.csv", "match": "\\\\." }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.separator.delimiter.paradox.csv", "match": ";" }
      ]
    }
  }
}
