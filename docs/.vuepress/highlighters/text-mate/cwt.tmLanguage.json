{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CWT",
  "scopeName": "source.cwt",
  "fileTypes": ["cwt"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#booleans" },
    { "include": "#numbers" },
    { "include": "#property" },
    { "include": "#strings" },
    { "include": "#punctuation" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.doc.cwt",
          "begin": "(?<=^\\s*)###",
          "end": "$"
        },
        {
          "name": "comment.line.number-sign.option.cwt",
          "begin": "(?<=^\\s*)##",
          "end": "$"
        },
        {
          "name": "comment.line.number-sign.cwt",
          "begin": "#",
          "end": "$"
        }
      ]
    },
    "booleans": {
      "patterns": [
        { "name": "constant.language.boolean.cwt", "match": "\\b(?:yes|no)\\b" }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.cwt", "match": "\\b-?\\d+\\.\\d+\\b" },
        { "name": "constant.numeric.integer.cwt", "match": "\\b-?\\d+\\b" }
      ]
    },
    "property": {
      "patterns": [
        {
          "name": "variable.key.quoted.double.cwt",
          "begin": "\"(?=([^\"\\\\\\r\\n]|\\\\[\\s\\S])*\"?\\s*(?:==|=|!=|<>))",
          "end": "\"",
          "patterns": [
            { "include": "#escapes" }
          ]
        },
        {
          "name": "variable.key.unquoted.cwt",
          "begin": "(?=[^#={}\\s\"]+\"?\\s*(?:==|=|!=|<>))",
          "end": "$|(?=[#={}\\s])",
          "patterns": [
            { "include": "#escapes" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cwt",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#escapes" }
          ]
        },
        {
          "name": "string.unquoted.cwt",
          "begin": "(?=[^#={}\\s])",
          "end": "$|(?=[#={}\\s])",
          "patterns": [
            { "include": "#escapes" }
          ]
        }
      ]
    },
    "escapes": {
      "patterns": [
        { "name": "constant.character.escape.cwt", "match": "\\\\." }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.section.block.begin.cwt", "match": "\\{" },
        { "name": "punctuation.section.block.end.cwt", "match": "\\}" }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.comparison.cwt", "match": "==|=|!=|<>" }
      ]
    }
  }
}
