{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Paradox Localisation",
  "scopeName": "source.paradox.localisation",
  "fileTypes": ["yml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#header" },
    { "include": "#property" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.paradox.localisation",
          "begin": "#",
          "end": "$"
        }
      ]
    },
    "header": {
      "patterns": [
        {
          "name": "entity.name.section.locale.paradox.localisation",
          "match": "^[a-z_]+:\\s*$"
        }
      ]
    },
    "property": {
      "patterns": [
        {
          "name": "variable.key.paradox.localisation",
          "match": "(?<=^|\\s)[A-Za-z0-9_.\\-']+"
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.integer.paradox.localisation", "match": "\\b\\d+\\b" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.paradox.localisation",
          "begin": "\"",
          "end": "(?=\\s*(?:#[^\"\\r\\n]*)?$)",
          "patterns": [
            { "name": "support.class.color.start.paradox.localisation", "match": "§[A-Za-z0-9]" },
            { "name": "support.class.color.end.paradox.localisation", "match": "§!" },
            { "include": "#parameters" },
            { "name": "constant.other.symbol.icon.paradox.localisation", "match": "£[A-Za-z0-9\\-_\\/\\\\]+(?:\\|[^\"§$\\[\\]\\r\\n\\\\]+)?£" },
            { "name": "support.function.command.paradox.localisation", "match": "\\[[^\\]\\r\\n]*]"  },
            { "name": "constant.other.symbol.text-format.start.paradox.localisation", "match": "#(?!!)[\\w:;]+" },
            { "name": "constant.other.symbol.text-format.end.paradox.localisation", "match": "#!" },
            { "name": "constant.other.symbol.text-icon.paradox.localisation", "match": "@[A-Za-z0-9_]+!" },
            { "include": "#escapes" }
          ]
        }
      ]
    },
    "parameters": {
      "patterns": [
        {
          "name": "variable.interpolation.paradox.localisation",
          "match": "\\$(?:@[A-Za-z_]\\w*|[A-Za-z0-9_.\\-']+)(?:\\|[^\"§$\\[\\]\\r\\n\\\\]+)?\\$"
        }
      ]
    },
    "escapes": {
      "patterns": [
        { "name": "constant.character.escape.paradox.localisation", "match": "\\\\." }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.separator.colon.paradox.localisation", "match": ":" }
      ]
    }
  }
}
