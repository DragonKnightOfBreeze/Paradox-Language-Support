{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Paradox Localisation",
  "scopeName": "source.paradoxlocalisation",
  "fileTypes": ["yml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#header" },
    { "include": "#property" },
    { "include": "#string" },
    { "include": "#number" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.localisation",
          "match": "^(^|\\s)(#).*",
          "captures": {
            "2": {"name": "punctuation.definition.comment.localisation"}
          }
        }
      ]
    },
    "header": {
      "patterns": [
        {
          "name": "entity.name.section.locale.localisation",
          "match": "^[a-z_]+:\\s*$"
        }
      ]
    },
    "property": {
      "patterns": [
        {
          "name": "meta.property.localisation",
          "match": "^(^|\\s)[A-Za-z0-9_.\\-']+",
          "captures": {
            "2": { "name": "variable.other.key.localisation" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.integer.localisation", "match": "\\b\\d+\\b" }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.localisation",
          "match": "\"[^\\r\\n]+\"?",
          "patterns": [
            { "include": "#string-markup" }
          ]
        }
      ]
    },
    "string-markup": {
      "patterns": [
        { "name": "constant.other.color.start.localisation", "match": "§[A-Za-z0-9]" },
        { "name": "constant.other.color.end.localisation", "match": "§!" },
        { "name": "variable.parameter.localisation", "match": "\\$(?:@[A-Za-z_]\\w*|[A-Za-z0-9_.\\-']+)(?:\\|[^\\\"§$\\[\\]\\r\\n\\\\]+)?\\$" },
        { "name": "support.constant.icon.localisation", "match": "£[A-Za-z0-9_\\-\\/\\\\]+(?:\\|[^\\\"§$\\[\\]\\r\\n\\\\]+)?£" },
        { "name": "meta.bracket.command.localisation", "match": "\\[[^\\]\\r\\n]*\\]" },
        { "name": "support.other.text-format.start.localisation", "match": "#(?!!)[\\w:;]+" },
        { "name": "support.other.text-format.end.localisation", "match": "#!" },
        { "name": "support.other.text-icon.localisation", "match": "@[A-Za-z0-9_]+!" },
        { "name": "constant.character.escape.localisation", "match": "\\\\." }
      ]
    }
  }
}
