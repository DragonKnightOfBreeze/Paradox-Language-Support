<templateSet group="Paradox Localisation">
  <template name="sref"
            value="$$$SELECTION$$$"
            description="Surround with property reference markers"
            toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
  <template name="scolor"
            value="§$CODE$$SELECTION$§!"
            description="Surround with colorful text markers"
            toReformat="false" toShortenFQNames="true">
    <variable name="CODE" expression="complete()" alwaysStopAt="true"/>
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
  <template name="scmd"
            value="[$SELECTION$]"
            description="Surround with command markers"
            toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
  <template name="ref"
            value="$$$TEXT$$$$END$"
            description="Insert a property reference fragment"
            toReformat="false" toShortenFQNames="true">
    <variable name="TEXT" expression="" defaultValue="" alwaysStopAt="true"/>
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
  <template name="color"
            value="§$CODE$$TEXT$§!$END$"
            description="Insert a colorful text fragment"
            toReformat="false" toShortenFQNames="true">
    <variable name="CODE" expression="complete()" alwaysStopAt="true"/>
    <variable name="TEXT" expression="" defaultValue="" alwaysStopAt="true"/>
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
  <template name="cmd"
            value="[$TEXT$]$END$"
            description="Insert a command fragment"
            toReformat="false" toShortenFQNames="true">
    <variable name="TEXT" expression="" defaultValue="" alwaysStopAt="true"/>
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
  <template name="icon"
            value="£$TEXT$£$END$"
            description="Insert an icon fragment"
            toReformat="false" toShortenFQNames="true">
    <variable name="TEXT" expression="" defaultValue="" alwaysStopAt="true"/>
    <context>
      <option name="PARADOX_LOCALISATION" value="true"/>
    </context>
  </template>
</templateSet>
