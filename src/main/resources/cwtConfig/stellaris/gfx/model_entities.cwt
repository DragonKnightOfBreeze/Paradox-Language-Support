model_entity = {
  name = scalar
  ## cardinality = 0..1
  pdxmesh = <model_mesh> #this connects to meshes defined in a *.gfx file!

  ## cardinality = 0..1
  cull_radius = float
  ## cardinality = 0..1
  scale = float
  ## cardinality = 0..1
  playback_rate = float

  #none or one of the two below!
  ## cardinality = 0..1
  default_state = enum[model_states]
  ## cardinality = 0..1
  default_state = no_state

  ## cardinality = 0..1
  get_state_from_parent = bool
  ## cardinality = 0..1
  clone = <model_entity>
  ## cardinality = 0..inf
  state = {
		name = scalar
		## cardinality = 0..1
		state_time = float
		## cardinality = 0..1
		looping = bool

		#none or one of the two below!
		## cardinality = 0..1
		next_state = enum[model_states]
		## cardinality = 0..1
		next_state = state2
		## cardinality = 0..1
		next_state = start2

		## cardinality = 0..1
		chance = bool
		## cardinality = 0..1
		chance = float
		## cardinality = 0..1
		chance = {
			if_current_state = {
				## cardinality = 0..inf
				enum[model_states] = 0
				## cardinality = 0..inf
				enum[model_states] = 100
			}
			## cardinality = 0..1
			default = int
		}
		## cardinality = 0..1
		get_state_from_parent = bool
		## cardinality = 0..1
		animation = <model_animation> #animations are defined in a different file in the same folder, also a *.asset file
		## cardinality = 0..1
   		animation = enum[model_animation_types]
		## cardinality = 0..1
   		animation = scalar #TODO
		## cardinality = 0..1
		animation_speed = float
		## cardinality = 0..1
		animation_blend_time = float
		## cardinality = 0..1
		time_offset = {
			## cardinality = 2..2
			float
		}
		#locator here is linked to both attach = { in the same files and ship_sizes under common!
		## cardinality = 0..inf
		locator = {
			name = scalar #this is an override for locators defined in the models. This key is used in the ship_sizes file as well as when attach = { is used in an asset file.
			## cardinality = 0..1
			position = {
				## cardinality = 3..3
				float
			} #XYZ axis coordinates and degrees: 0 0 -14.5
			## cardinality = 0..1
			rotation = {
				## cardinality = 3..3
				float
			}
			## cardinality = 0..1
			scale = float
		}
		## cardinality = 0..1
		game_data = {
			bloom_factor = float
			uv_animation_speed = float
			uv_animation_direction = {
				## cardinality = 2..2
				float
			}
		}
		## cardinality = 0..inf
		event = {
			## cardinality = 0..1
			### This is used only to link to planet killer projectiles
			id = beam_start #this is tied to the planet killer projectiles, see the comment i left in projectiles -- exnihil.
			## cardinality = 0..1
			time = float
			## cardinality = 0..1
			node = scalar #"bombardment_location_2" for example, this seem to point to a *.mesh file
			## cardinality = 0..1
			light = <light>
			## cardinality = 0..1
			entity = <model_entity>
			## cardinality = 0..1
			life = float
			## cardinality = 0..1
			particle = <particle>
			## cardinality = 0..1
			keep_particle = bool
			## cardinality = 0..1
			use_parent_nodes = bool
			## cardinality = 0..1
			trigger_once = bool
			## cardinality = 0..1
			sound = {
				soundeffect = <sound_effect> #"bombardment_explosion" -  files are stored under game/sound/category.asset	}
				## cardinality = 0..1
				stop_on_state_change = bool
			}
		}
		## cardinality = 0..inf
		start_event = {
			## cardinality = 0..1
			time = int
			## cardinality = 0..1
			trigger_once = bool
			## cardinality = 0..1
			node = scalar #"bombardment_location_2" for example, this seem to point to a *.mesh file
			## cardinality = 0..1
			light = <light>
			## cardinality = 0..1
			particle = <particle>
			## cardinality = 0..1
			#light = scalar
			## cardinality = 0..1
			keep_particle = bool
			## cardinality = 0..1
			sound = {
				soundeffect = <sound_effect> #"bombardment_explosion" -  files are stored under game/sound/category.asset	}
				## cardinality = 0..1
				stop_on_state_change = bool
			}
		}
	}
	## cardinality = 0..inf
	attach = {
		## cardinality = 0..4
		# TODO: Make this smarter, left side is locators
		scalar = <model_entity> #see locator in this file.
		## cardinality = 0..1
		name = scalar
		## cardinality = 0..1
		root = <model_entity>
		## cardinality = 0..1
		scene_main = <model_entity>
	}
	## cardinality = 0..1
	game_data = {
		## cardinality = 0..1
		size = float
		## cardinality = 0..1
		emissive_recolor_crunch = float
		## cardinality = 0..1
		trail_locators = {
			## cardinality = 0..inf
			scalar = { #example: exhaust_01, this probably connects to something
				## cardinality = 0..1
				width = int
				## cardinality = 0..1
				length = int
				#dunno if it works. Seems to be used often so downgraded it because it probably does -Caligula
				## severity = info
				## cardinality = 0..0
				lenght = int
				## cardinality = 0..1
				height = int
			}
		}
		## cardinality = 0..1
		uv_animation_speed = float
		## cardinality = 0..1
		uv_animation_direction = {
			## cardinality = 2..3
			float
		}
		## cardinality = 0..1
		bloom_factor = float
		## cardinality = 0..1
		shader_type = scalar
		## cardinality = 0..1
		raytrace_projectiles = bool
		## cardinality = 0..1
		custom_texture = filepath
		## cardinality = 0..1
		dissolve_on_death = float
		## cardinality = 0..1
		ship_color = {
			## cardinality = 3..4
			float
		}
	}
	#locator here is linked to both attach = { in the same files and ship_sizes under common!
	## cardinality = 0..inf
	locator = {
		name = scalar #this is an override for locators defined in the models. This key is used in the ship_sizes file as well as when attach = { is used in an asset file.
		## cardinality = 0..1
		position = {
			## cardinality = 3..3
			float
		} #XYZ axis coordinates and degrees: 0 0 -14.5
		## cardinality = 0..1
		rotation = {
			## cardinality = 3..3
			float
		}
		## cardinality = 0..1
		scale = float
	}

	#these need to be updated and linked to other files
	## cardinality = 0..inf
	meshsettings = {
		## cardinality = 0..1
		name = scalar #examples: "planet_geosphereShape" "polesShape" "clouds_geosphereShape"
		## cardinality = 0..1
		index = int
		#The links below link to files stored under game/gfx/models/planets + subfolders!
		## cardinality = 0..1
		texture_diffuse = scalar ##TODO filepath #example: "toxic_01_purple_diffuse.dds"
		## cardinality = 0..1
		texture_normal = scalar ##TODO filepath #example: "toxic_01_normal.dds"
		## cardinality = 0..1
		texture_specular = scalar ##TODO filepath #example: "toxic_01_spec.dds"
		## cardinality = 0..1
		shader = scalar #this seems to point to a shader mesh, dunno where its stored. example: "PdxMeshPlanetEmissive". I believe this is stored in a *.mesh file
	}
}

