	## type_key_filter = entity
	type[model_entity] = {
		name_field = name
		path = "gfx" #need to add subfolder to the parsing here! - these are stored in *.asset files!
		severity = warning
   }
   ## type_key_filter = pdxmesh
	type[model_mesh] = {
		name_field = name
		skip_root_key = objectTypes
