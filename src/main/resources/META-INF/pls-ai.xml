<idea-plugin>
  <extensionPoints>
    <extensionPoint qualifiedName="icu.windea.pls.ai.chatModelProvider" interface="icu.windea.pls.ai.providers.PlsChatModelProvider" dynamic="true"/>
  </extensionPoints>

  <extensions defaultExtensionNs="icu.windea.pls.ai">
    <chatModelProvider implementation="icu.windea.pls.ai.providers.PlsOpenAiChatModelProvider"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable id="pls.ai" parentId="pls" bundle="messages.PlsBundle" key="settings.ai" instance="icu.windea.pls.ai.settings.PlsAiSettingsConfigurable"/>

    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>intention.localisation.category</categoryKey>
      <className>icu.windea.pls.lang.intentions.localisation.ai.CopyLocalisationWithAiTranslationIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>intention.localisation.category</categoryKey>
      <className>icu.windea.pls.lang.intentions.localisation.ai.ReplaceLocalisationWithAiTranslationIntention</className>
    </intentionAction>

    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>intention.localisation.category</categoryKey>
      <className>icu.windea.pls.lang.intentions.localisation.ai.CopyLocalisationWithAiPolishingIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>intention.localisation.category</categoryKey>
      <className>icu.windea.pls.lang.intentions.localisation.ai.ReplaceLocalisationWithAiPolishingIntention</className>
    </intentionAction>
  </extensions>
</idea-plugin>
