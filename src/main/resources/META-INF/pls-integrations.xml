<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable id="pls.integrations" parentId="pls" bundle="messages.PlsBundle" key="settings.integrations" instance="icu.windea.pls.integrations.settings.PlsIntegrationsSettingsConfigurable"/>
  </extensions>

  <extensionPoints>
    <extensionPoint qualifiedName="icu.windea.pls.integrations.imageToolProvider" interface="icu.windea.pls.integrations.image.providers.PlsImageToolProvider" dynamic="true"/>
    <extensionPoint qualifiedName="icu.windea.pls.integrations.translationToolProvider" interface="icu.windea.pls.integrations.translation.providers.PlsTranslationToolProvider" dynamic="true"/>
  </extensionPoints>

  <extensions defaultExtensionNs="icu.windea.pls.integrations">
    <imageToolProvider implementation="icu.windea.pls.integrations.image.providers.PlsTexconvToolProvider"/>
    <imageToolProvider implementation="icu.windea.pls.integrations.image.providers.PlsMagickToolProviderImpl"/>
    <imageToolProvider implementation="icu.windea.pls.integrations.image.providers.PlsPaintNetToolProviderImpl"/>

    <!-- see pls-extension-translation.xml -->
    <!--<translationToolProvider implementation="icu.windea.pls.integrations.translation.providers.PlsTranslationPluginToolProvider"/>-->
  </extensions>
</idea-plugin>
