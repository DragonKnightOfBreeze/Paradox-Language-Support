    <lang.psiStructureViewFactory language="PARADOX_CSV" implementationClass="icu.windea.pls.csv.structureView.ParadoxCsvStructureViewFactory"/>

    <highlightUsagesHandlerFactory implementation="icu.windea.pls.csv.editor.ParadoxCsvHighlightUsagesHandlerFactory"/>
