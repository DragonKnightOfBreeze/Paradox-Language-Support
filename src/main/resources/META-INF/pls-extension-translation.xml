<idea-plugin>
  <extensions defaultExtensionNs="cn.yiiguxing.plugin.translate">
    <documentationElementProvider language="CWT" implementationClass="icu.windea.pls.extension.translation.CwtDocumentationElementProvider"/>
    <documentationElementProvider language="PARADOX_SCRIPT" implementationClass="icu.windea.pls.extension.translation.ParadoxScriptDocumentationElementProvider"/>
    <documentationElementProvider language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.extension.translation.ParadoxLocalisationDocumentationElementProvider"/>
  </extensions>
  
  <extensions defaultExtensionNs="com.intellij">
    <lang.documentationProvider language="CWT" order="first" implementationClass="cn.yiiguxing.plugin.translate.provider.TranslatedDocumentationProvider"/>
    <lang.documentationProvider language="PARADOX_SCRIPT" order="first" implementationClass="cn.yiiguxing.plugin.translate.provider.TranslatedDocumentationProvider"/>
    <lang.documentationProvider language="PARADOX_LOCALISATION" order="first" implementationClass="cn.yiiguxing.plugin.translate.provider.TranslatedDocumentationProvider"/>
    
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <className>icu.windea.pls.lang.intentions.localisation.CopyLocalisationForLocaleIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>
  </extensions>
</idea-plugin>