<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <fileType language="PARADOX_LOCALISATION" name="Paradox Localisation" fieldName="INSTANCE"
              implementationClass="icu.windea.pls.localisation.ParadoxLocalisationFileType"/>
    <lang.parserDefinition language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.psi.ParadoxLocalisationParserDefinition"/>
    <stubElementTypeHolder class="icu.windea.pls.localisation.psi.ParadoxLocalisationStubElementTypes" externalIdPrefix="paradoxLocalisation."/>
    <spellchecker.support language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.ParadoxLocalisationSpellchecker"/>
    <lang.syntaxHighlighterFactory language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.highlighter.ParadoxLocalisationSyntaxHighlighterFactory"/>
    <colorSettingsPage implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationColorSettingsPage"/>
    <lang.braceMatcher language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationBraceMatcher"/>
    <lang.commenter language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationCommenter"/>
    <breadcrumbsInfoProvider implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationBreadCrumbsProvider"/>
    <lang.quoteHandler language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationQuoteHandler"/>
    <lang.documentationProvider language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationDocumentationProvider"/>
    <lang.findUsagesProvider language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationFindUsagesProvider"/>
    <elementDescriptionProvider implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationFindUsagesProvider"/>
    <annotator language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationAnnotator"/>
    <errorQuickFixProvider implementation="icu.windea.pls.localisation.codeInsight.ParadoxLocalisationErrorQuickFixProvider"/>
    <declarationRangeHandler key="icu.windea.pls.localisation.psi.ParadoxLocalisationPropertyList" implementationClass="icu.windea.pls.localisation.codeInsight.ParadoxLocalisationDeclarationRangeHandler"/>
    <lang.implementationTextSelectioner language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.codeInsight.ParadoxLocalisationImplementationTextSelectioner"/>
    <completion.contributor language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.codeInsight.completion.ParadoxLocalisationCompletionContributor"/>
    <codeInsight.lineMarkerProvider language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.codeInsight.markers.ParadoxLocalisationLineMarkerProvider"/>
    <codeInsight.inlayProvider language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.codeInsight.hints.ParadoxLocalisationIconHintsProvider"/>
    <liveTemplateContext contextId="PARADOX_LOCALISATION" 
                         implementation="icu.windea.pls.localisation.codeInsight.template.ParadoxLocalisationTemplateContextType$Base"/>
    <liveTemplateContext contextId="PARADOX_LOCALISATION_LOCALISATION_TEXT" baseContextId="PARADOX_LOCALISATION"
                         implementation="icu.windea.pls.localisation.codeInsight.template.ParadoxLocalisationTemplateContextType$LocalisationText"/>
    <defaultLiveTemplates file="/liveTemplates/ParadoxLocalisation.xml"/>
    <lang.formatter language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.formatter.ParadoxLocalisationFormattingModelBuilder"/>
    <codeStyleSettingsProvider implementation="icu.windea.pls.localisation.codeStyle.ParadoxLocalisationCodeStyleSettingsProvider"/>
    <langCodeStyleSettingsProvider implementation="icu.windea.pls.localisation.codeStyle.ParadoxLocalisationLanguageCodeStyleSettingsProvider"/>
    <navbar implementation="icu.windea.pls.localisation.navigation.ParadoxLocalisationNavBar"/>
    <lang.psiStructureViewFactory language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.structureView.ParadoxLocalisationStructureViewFactory"/>
    <fileStructureGroupRuleProvider implementation="icu.windea.pls.localisation.usages.ParadoxLocalisationLocaleFileStructureGroupRuleProvider"/>
    <lang.refactoringSupport language="PARADOX_LOCALISATION" implementationClass="icu.windea.pls.localisation.refactoring.ParadoxLocalisationRefactoringSupportProvider"/>
    <renameInputValidator implementation="icu.windea.pls.localisation.refactoring.ParadoxLocalisationPropertyRenameInputValidator"/>

    <!--floating toolbar-->
    <fileEditorProvider implementation="icu.windea.pls.localisation.ui.preview.ParadoxLocalisationTextEditorProvider"/>
    <!--<fileEditorProvider implementation="icu.windea.pls.localisation.ui.preview.ParadoxLocalisationEditorProvider"/>-->
    <advancedSetting id="paradoxLocalisation.hide.floating.toolbar" default="false" groupKey="settings"/>
    
    <additionalTextAttributes scheme="Default" file="colorSchemes/ParadoxLocalisationDefault.xml"/>
    <additionalTextAttributes scheme="Darcula" file="colorSchemes/ParadoxLocalisationDarcula.xml"/>
    <additionalTextAttributes scheme="High contrast" file="colorSchemes/ParadoxLocalisationHighContrast.xml"/>
    <additionalTextAttributes scheme="IntelliJ Light" file="colorSchemes/ParadoxLocalisationIntellijLight.xml"/>

    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>localisation.intention.category</categoryKey>
      <className>icu.windea.pls.localisation.intentions.ChangeLocalisationLocaleIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>localisation.intention.category</categoryKey>
      <className>icu.windea.pls.localisation.intentions.ChangeLocalisationColorIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>localisation.intention.category</categoryKey>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>localisation.intention.category</categoryKey>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationTextIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>localisation.intention.category</categoryKey>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationPlainTextIntention</className>
    </intentionAction>
    <intentionAction>
      <language>PARADOX_LOCALISATION</language>
      <bundleName>messages.PlsBundle</bundleName>
      <categoryKey>localisation.intention.category</categoryKey>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationRichTextIntention</className>
    </intentionAction>

    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnsupportedLocale"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.unsupportedLocale"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.UnsupportedLocaleInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationDuplicateProperties"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.duplicateProperties"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.DuplicatePropertiesInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationIncorrectFileName"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.incorrectFileName"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.IncorrectFileNameInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationIncorrectFileEncoding"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.incorrectFileEncoding"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.IncorrectFileEncodingInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationMultipleLocales"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.multipleLocales"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.MultipleLocalesInspection"/>
    <!--advanced-->
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedIcon"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.advanced.unresolvedIcon"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.advanced"
                     groupPathKey="localisation.inspection.advanced.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.UnresolvedIconInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedColor"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.advanced.unresolvedColor"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.advanced"
                     groupPathKey="localisation.inspection.advanced.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.UnresolvedColorInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedCommandScope"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.advanced.unresolvedCommandScope"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.advanced"
                     groupPathKey="localisation.inspection.advanced.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.UnresolvedCommandScopeInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedCommandField"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.advanced.unresolvedCommandField"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.advanced"
                     groupPathKey="localisation.inspection.advanced.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.UnresolvedCommandFieldInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedScriptedVariable"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.advanced.unresolvedScriptedVariable"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.advanced"
                     groupPathKey="localisation.inspection.advanced.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.UnresolvedScriptedVariableInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedStellarisNamePart"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.advanced.unresolvedStellarisNamePart"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.advanced"
                     groupPathKey="localisation.inspection.advanced.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.UnresolvedStellarisNamePartInspection"/>
    <!--advanced > scope-->
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationIncorrectScope"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.scope.incorrectScope"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.scope"
                     groupPathKey="localisation.inspection.scope.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.scope.IncorrectScopeInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationIncorrectScopeSwitch"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.scope.incorrectScopeSwitch"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection.scope"
                     groupPathKey="localisation.inspection.scope.path"
                     implementationClass="icu.windea.pls.localisation.inspections.advanced.scope.IncorrectScopeSwitchInspection"/>
  </extensions>

  <actions>
    <group id="ParadoxLocalisation.Toolbar.Floating" searchable="false" class="icu.windea.pls.localisation.ui.actions.styling.FloatingToolbarGroup"/>
  </actions>
</idea-plugin>
