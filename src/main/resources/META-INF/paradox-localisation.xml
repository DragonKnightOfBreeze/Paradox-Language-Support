<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <fileType
        language="PARADOX_LOCALISATION"
        name="Paradox Localisation" fieldName="INSTANCE"
        implementationClass="icu.windea.pls.localisation.ParadoxLocalisationFileType"/>
    <lang.parserDefinition
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.psi.ParadoxLocalisationParserDefinition"/>

    <stubElementTypeHolder
        class="icu.windea.pls.localisation.psi.ParadoxLocalisationStubElementTypes"
        externalIdPrefix="paradoxLocalisation."/>
    <stubIndex implementation="icu.windea.pls.localisation.psi.ParadoxLocalisationNameIndex$Localisation"/>
    <stubIndex implementation="icu.windea.pls.localisation.psi.ParadoxLocalisationNameIndex$SyncedLocalisation"/>

    <spellchecker.support
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.ParadoxLocalisationSpellchecker"/>
    <lang.syntaxHighlighterFactory
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.highlighter.ParadoxLocalisationSyntaxHighlighterFactory"/>
    <colorSettingsPage
        implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationColorSettingsPage"/>
    <lang.braceMatcher
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationBraceMatcher"/>
    <lang.commenter
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationCommenter"/>
    <liveTemplateContext
        implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationTemplateContext"/>
    <defaultLiveTemplates file="/liveTemplates/ParadoxLocalisation.xml"/>
    <breadcrumbsInfoProvider
        implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationBreadCrumbsProvider"/>
    <lang.quoteHandler
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationQuoteHandler"/>
    <lang.documentationProvider
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationDocumentationProvider"/>
    <lang.findUsagesProvider
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationFindUsagesProvider"/>
    <elementDescriptionProvider implementation="icu.windea.pls.localisation.editor.ParadoxLocalisationFindUsagesProvider"/>
    <annotator
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.editor.ParadoxLocalisationAnnotator"/>
    <errorQuickFixProvider
        implementation="icu.windea.pls.localisation.codeInsight.ParadoxLocalisationErrorQuickFixProvider"/>
    <declarationRangeHandler
        key="icu.windea.pls.localisation.psi.ParadoxLocalisationPropertyList"
        implementationClass="icu.windea.pls.localisation.codeInsight.ParadoxLocalisationDeclarationRangeHandler"/>
    <lang.implementationTextSelectioner
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.codeInsight.ParadoxLocalisationImplementationTextSelectioner"/>
    <completion.contributor
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.codeInsight.completion.ParadoxLocalisationCompletionContributor"/>
    <codeInsight.lineMarkerProvider
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.codeInsight.markers.ParadoxLocalisationLineMarkerProvider"/>
    <lang.formatter
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.formatter.ParadoxLocalisationFormattingModelBuilder"/>
    <codeStyleSettingsProvider
        implementation="icu.windea.pls.localisation.codeStyle.ParadoxLocalisationCodeStyleSettingsProvider"/>
    <langCodeStyleSettingsProvider
        implementation="icu.windea.pls.localisation.codeStyle.ParadoxLocalisationLanguageCodeStyleSettingsProvider"/>
    <navbar implementation="icu.windea.pls.localisation.navigation.ParadoxLocalisationNavBar"/>
    <definitionsScopedSearch implementation="icu.windea.pls.localisation.navigation.ParadoxLocalisationImplementationsSearch"/>
    <lang.psiStructureViewFactory
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.structureView.ParadoxLocalisationStructureViewFactory"/>
    <fileStructureGroupRuleProvider implementation="icu.windea.pls.localisation.usages.ParadoxLocalisationLocaleFileStructureGroupRuleProvider"/>
    <lang.refactoringSupport
        language="PARADOX_LOCALISATION"
        implementationClass="icu.windea.pls.localisation.refactoring.ParadoxLocalisationRefactoringSupportProvider"/>
    <renameInputValidator
        implementation="icu.windea.pls.localisation.refactoring.ParadoxLocalisationPropertyRenameInputValidator"/>

    <!--floating toolbar-->
    <fileEditorProvider implementation="icu.windea.pls.localisation.ui.preview.ParadoxLocalisationTextEditorProvider"/>
    <!--<fileEditorProvider implementation="icu.windea.pls.localisation.ui.preview.ParadoxLocalisationEditorProvider"/>-->
    <advancedSetting id="paradoxLocalisation.hide.floating.toolbar" default="false" groupKey="settings"/>

    <additionalTextAttributes scheme="Default" file="colorSchemes/ParadoxLocalisationDefault.xml"/>
    <additionalTextAttributes scheme="Darcula" file="colorSchemes/ParadoxLocalisationDarcula.xml"/>

    <intentionAction>
      <className>icu.windea.pls.localisation.intentions.ChangeLocalisationLocaleIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>
    <intentionAction>
      <className>icu.windea.pls.localisation.intentions.ChangeLocalisationColorIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>


    <intentionAction>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>
    <intentionAction>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationTextIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>
    <intentionAction>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationPlainTextIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>
    <intentionAction>
      <className>icu.windea.pls.localisation.intentions.CopyLocalisationRichTextIntention</className>
      <category>Paradox localisation</category>
    </intentionAction>

    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnsupportedLocale"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.unsupportedLocale"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.UnsupportedLocaleInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedColor"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.unresolvedColor"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.UnresolvedColorInspection"/>

    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationUnresolvedIcon"
                     enabledByDefault="true" level="ERROR"
                     bundle="messages.PlsBundle" key="localisation.inspection.unresolvedIcon"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.UnresolvedIconInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationDuplicateProperties"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.duplicateProperties"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.DuplicatePropertiesInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationIncorrectFileName"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.incorrectFileName"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.IncorrectFileNameInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationIncorrectFileEncoding"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.incorrectFileEncoding"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.IncorrectFileEncodingInspection"/>
    <localInspection language="PARADOX_LOCALISATION" shortName="ParadoxLocalisationMultipleLocales"
                     enabledByDefault="true" level="WARNING"
                     bundle="messages.PlsBundle" key="localisation.inspection.multipleLocales"
                     groupBundle="messages.PlsBundle" groupKey="localisation.inspection"
                     implementationClass="icu.windea.pls.localisation.inspections.MultipleLocalesInspection"/>
  </extensions>

  <actions>
    <group id="ParadoxLocalisation.Toolbar.Floating" searchable="false"
           class="icu.windea.pls.localisation.ui.actions.styling.FloatingToolbarGroup"/>
  </actions>
</idea-plugin>