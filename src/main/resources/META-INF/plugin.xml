<idea-plugin
    url="https://github.com/DragonKnightOfBreeze/Paradox-Language-Support"
    xmlns:xi="http://www.w3.org/2001/XInclude">

  <id>icu.windea.pls</id>
  <name>Paradox Language Support</name>
  <category>Languages</category>

  <vendor email="dk_breeze@qq.com" url="https://github.com/DragonKnightOfBreeze">DragonKnightOfBreeze</vendor>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.platform.images</depends>
  <depends optional="true" config-file="icu.windea.pls-translation.xml">cn.yiiguxing.plugin.translate</depends>
  
  <resource-bundle>messages.PlsBundle</resource-bundle>

  <xi:include href="/META-INF/core.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/cwt.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/dds.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/paradox-script.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/paradox-localisation.xml" xpointer="xpointer(/idea-plugin/*)"/>
</idea-plugin>
