<idea-plugin url="https://github.com/DragonKnightOfBreeze/Paradox-Language-Support" xmlns:xi="http://www.w3.org/2001/XInclude">
  <id>icu.windea.pls</id>
  <name>Paradox Language Support</name>
  <category>Languages</category>
  <resource-bundle>messages.PlsBundle</resource-bundle>

  <vendor email="dk_breeze@qq.com" url="https://github.com/DragonKnightOfBreeze">DragonKnightOfBreeze</vendor>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.platform.images</depends>
  <depends optional="true" config-file="pls-extension-markdown.xml">org.intellij.plugins.markdown</depends>
  <depends optional="true" config-file="pls-extension-diagram.xml">com.intellij.diagram</depends>
  <depends optional="true" config-file="pls-extension-translation.xml">cn.yiiguxing.plugin.translate</depends>

  <!--should be on very top-->
  <xi:include href="/META-INF/pls-inject.xml" xpointer="xpointer(/idea-plugin/*)"/>
  
  <xi:include href="/META-INF/pls-cwt.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-script.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-localisation.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-dds.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-lang.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-config.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-intentions.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-inspections.xml" xpointer="xpointer(/idea-plugin/*)"/>
  <xi:include href="/META-INF/pls-ep.xml" xpointer="xpointer(/idea-plugin/*)"/>
</idea-plugin>
