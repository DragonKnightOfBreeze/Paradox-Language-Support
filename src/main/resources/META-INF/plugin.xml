    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$Ck2LibraryType"/>
    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$Ck3LibraryType"/>
    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$Eu4LibraryType"/>
    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$Hoi4LibraryType"/>
    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$IrLibraryType"/>
    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$StellarisLibraryType"/>
    <library.type implementation="com.windea.plugin.idea.pls.core.library.ParadoxLibraryType$Vic2LibraryType"/>

    <applicationConfigurable
        id="settings.language.paradox"
        groupId="language"
        instance="com.windea.plugin.idea.pls.core.settings.ParadoxSettingsConfigurable"/>
    <applicationService
        serviceImplementation="com.windea.plugin.idea.pls.core.settings.ParadoxSettingsState"/>
    <!--endregion-->

    <!--region Cwt Language-->
