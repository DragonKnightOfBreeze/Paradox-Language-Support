types = {
	type[achievement] = {
		path = "game/common/achievements"

		localisation = {
			name = "ACHIEVEMENT_$"
			description = "ACHIEVEMENT_DESC_$"
			tooltip = "$_tooltip"
		}
	}
}

## replace_scope = { this = country root = country }
achievement = {
	possible = {
		## cardinality = 0..inf
		alias_name[trigger] = alias_match_left[trigger]
	}

	happened = {
		## cardinality = 1..inf
		alias_name[trigger] = alias_match_left[trigger]
	}
}