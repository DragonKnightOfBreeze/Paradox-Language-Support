types = {
    type[modifier_container] = {
        path = "game/common/modifiers"

        subtype[triggered] = {
            cancellation_trigger = {

            }
        }

        localisation = {
            name = "$"
            description = "desc_$"
        }
    }
}

# TODO: Ensure all hardcoded modifiers exist
