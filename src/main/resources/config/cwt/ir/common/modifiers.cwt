## replace_scope = { this = any }
modifier_container = {
    ## cardinality = 1..inf
    alias_name[modifier] = alias_match_left[modifier]

    ## cardinality = 0..1
    cancellation_trigger = {
        ## cardinality = 1..inf
        alias_name[trigger] = alias_match_left[trigger]
    }

    subtype[triggered] = {
        ## cardinality = 0..1
        cancellation_effect = {
            ## cardinality = 1..inf
            alias_name[effect] = alias_match_left[effect]
        }
    }
}