types = {
	type[portrait] = {
		skip_root_key = portraits
		severity = warning
		path = "game/gfx/portraits/portraits"
	}
	type[portrait_group] = {
		skip_root_key = portrait_groups
		severity = warning
		path = "game/gfx/portraits/portraits"
	}
}

