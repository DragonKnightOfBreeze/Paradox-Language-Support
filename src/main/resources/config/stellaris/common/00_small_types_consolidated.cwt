ambient_object = {
	subtype[show_name] = {
		###A localisation key. Does not use localisation_synced.
		name = localisation
	}
	subtype[!show_name] = {
		name = scalar
	}
	subtype[selectable] = {
		description = localisation
		tooltip = localisation
	}
	entity = <model_entity>
	selectable = bool
	###Determines whether you can read the name of the object ingame.
	show_name = bool
}


