
types = {
	type[economic_category] = {
		path = "game/common/economic_categories"
		subtype[has_parent] = {
			parent = scalar
		}
		subtype[hidden] = {
			hidden = yes
		}
	}
}

economic_category = {
	## cardinality = 0..1
    parent = <economic_category>
	## cardinality = 0..1
	use_for_ai_budget = yes
	subtype[!hidden] = {
		# TODO: icons
		icon = scalar
	}
	subtype[hidden] = {
		hidden = yes
	}

	## cardinality = 0..1
	hidden = bool

	## cardinality = 0..inf
	triggered_produces_modifier = {
		subtype[has_parent] = {
			## cardinality = 0..1
			use_parent_icon = yes
		}
		key = localisation
		## cardinality = 0..1
		trigger = {
			alias_name[trigger] = alias_match_left[trigger]
		}
		modifier_types = {
			## cardinality = 0..2
			enum[economic_modifier_types]
		}
	}
	## cardinality = 0..inf
	triggered_cost_modifier = {
		key = localisation
		## cardinality = 0..1
		trigger = {
			alias_name[trigger] = alias_match_left[trigger]
		}
		## cardinality = 0..1
		use_parent_icon = yes
		modifier_types = {
			## cardinality = 0..2
			enum[economic_modifier_types]
		}

	}
	## cardinality = 0..inf
	triggered_upkeep_modifier = {
		key = scalar
		## cardinality = 0..1
		trigger = {
			alias_name[trigger] = alias_match_left[trigger]
		}
		modifier_types = {
			## cardinality = 0..2
			enum[economic_modifier_types]
		}

	}
	## cardinality = 0..1
	ai_use_parent_for_resources_upkeep = {
		<resource>
	}
	## cardinality = 0..1
	generate_mult_modifiers = {
		## cardinality = 1..3
		enum[economic_modifier_categories]
	}
	## cardinality = 0..1
	generate_add_modifiers = {
		## cardinality = 1..3
		enum[economic_modifier_categories]
	}
}


