types = {
	type[edict] = {
		path = "game/common/edicts"

		subtype[edict_ambition] = {
			is_ambition = yes
		}

		localisation = {
			## required
			Name = "edict_$"
			## required
			Description = "edict_$_desc"
		}
	}
}

