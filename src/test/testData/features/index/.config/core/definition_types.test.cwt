types = {
    # 基础：属性定义，name = type key
    type[starship] = {
        path = "common/starships"
        path_extension = .txt
    }

    # type_per_file：文件级定义
    type[planet_class] = {
        path = "common/planet_classes"
        path_extension = .txt
        type_per_file = yes
    }

    # name_field：从指定子属性取名
    type[alien_species] = {
        path = "common/alien_species"
        path_extension = .txt
        name_field = "species_name"
    }

    # name_field = ""：匿名定义
    type[star_system] = {
        path = "common/star_systems"
        path_extension = .txt
        name_field = ""
    }

    # skip_root_key：跳过顶级键
    type[space_station] = {
        path = "common/space_stations"
        path_extension = .txt
        skip_root_key = stations
    }

    # type_key_filter（包含）
    ## type_key_filter = { warp_drive hyperdrive }
    type[ftl_drive] = {
        path = "common/drives"
        path_extension = .txt
    }

    # type_key_filter（排除），与 ftl_drive 同路径
    ## type_key_filter <> { warp_drive hyperdrive }
    type[sublight_drive] = {
        path = "common/drives"
        path_extension = .txt
    }

    # starts_with：名称去除前缀
    ## starts_with = d_
    type[district] = {
        path = "common/districts"
        path_extension = .txt
    }

    # type_key_regex：正则匹配 type key
    ## type_key_regex = "^fleet_.*"
    type[fleet_template] = {
        path = "common/fleets"
        path_extension = .txt
    }

    # skip_root_key 多选项：两种可选根键
    type[garrison] = {
        path = "common/garrisons"
        path_extension = .txt
        skip_root_key = ground_forces
        skip_root_key = naval_forces
    }

    # name_field = "-"：名称取自属性值
    type[anomaly] = {
        path = "common/anomalies"
        path_extension = .txt
        name_field = "-"
    }

    # 事件：支持继承，用于测试子类型继承逻辑
    type[event] = {
        path = "events"
        path_extension = .txt

        ## 事件类型
        subtype[country_event] = {
            type = country_event
        }
        subtype[planet_event] = {
            type = planet_event
        }

        ## 事件特性
        subtype[triggered] = {
            is_triggered_only = yes
        }

        ## 继承
        subtype[inherited] = {
            base = scalar
        }
    }
}
