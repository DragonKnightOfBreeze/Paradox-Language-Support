# Test CWT config for multi-arguments links

# Examples in script files:
# - root.test_literal_scope('foo bar', some_variable)
# - root.test_literal_scope('foo bar', some_variable).test_value(some_flag, some_job)
# - root.test_scope(root, some_building)
# - root.test_scope(root, some_building).test_value(some_flag, some_job)

links = {
    test_literal_scope_link = {
        type = scope
        from_argument = yes
        prefix = test_literal_scope:
        data_source = scalar # 'xxx' or any other valid literal
        data_source = value[test_variable]
        input_scopes = { any }
        output_scope = any
    }

    test_scope_link = {
        type = scope
        from_argument = yes
        prefix = test_scope:
        data_source = scope_field
        data_source = <building>
        input_scopes = { any }
        output_scope = any
    }

    test_value_link = {
        type = value
        from_argument = yes
        prefix = test_value:
        data_source = value[test_flag]
        data_source = <job>
        input_scopes = { any }
        output_scope = any
    }
}
